<%=
  schemata_template = Prmd::Template::load('schemata.erb', options[:template])

  schema['properties'].map do |resource, property|
    _, schemata = schema.dereference(property)
    Erubis::Eruby.new(schemata_template).result({
      options:         options,
      resource:        resource,
      schema:          schema,
      schemata:        schemata
    })
  end.join("\n") << "\n"
%>
